generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Spent {
  id          String   @id @default(uuid())
  date        DateTime 
  time        String
  description String?
  amount      Float
  category    Category
  payMode     PayMode  @map("pay_mode")

  @@map("spents")
}

model Balance {
  id          String   @id @default(uuid())
  balance     Float
  updatedAt   DateTime @updatedAt @map("updated_at")
  bank        Bank

  @@map("balances")
}

enum Bank {
  ITAU
  BRADESCO
  CAIXA
  SANTANDER
  BANCO_DO_BRASIL
  INTER
  NUBANK
  OTHER
}

enum Category {
  FOOD
  TRANSPORT
  ENTERTAINMENT
  BILLS
  OTHER
}

enum PayMode {
  PIX
  CARD
  OTHER
}
