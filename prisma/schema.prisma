generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String

  @@map("users")
}

model Balance {
  id        String   @id @default(uuid())
  balance   Float
  updatedAt DateTime @updatedAt @map("updated_at")
  period    String   @unique
  spent     Spent[]

  @@map("balances")
}

model Spent {
  id               String   @id @default(uuid())
  date             DateTime
  time             String
  description      String?
  amount           Float
  recurringExpense Boolean  @default(false) @map("recurring_expense")
  category         Category
  payMode          PayMode  @map("pay_mode")
  Balance          Balance? @relation(fields: [balanceId], references: [id])
  balanceId        String?

  @@map("spents")
}

enum Category {
  FOOD
  TRANSPORT
  ENTERTAINMENT
  BILLS
  OTHER
}

enum PayMode {
  PIX
  CARD
  OTHER
}

